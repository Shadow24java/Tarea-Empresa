<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    
    <record id="hr_employee_form_inherit_dni_nss" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.dni.nss</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
           
            <xpath expr="(//field[@name='name'])[1]" position="after">
                <field name="dni"/>
                <field name="nss"/>
            </xpath>
        </field>
    </record>

    
    <record id="hr_employee_list_inherit_dni_nss" model="ir.ui.view">
        <field name="name">hr.employee.list.inherit.dni.nss</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
           
            <xpath expr="(((//list | //tree)//field[@name='name'])[1])" position="after">
                <field name="dni"/>
                <field name="nss"/>
            </xpath>
        </field>
    </record>

</odoo>
