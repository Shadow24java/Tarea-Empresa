<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="group_guarderia_user" model="res.groups">
        <field name="name">Guardería / Usuario</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="group_guarderia_manager" model="res.groups">
        <field name="name">Guardería / Responsable</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_guarderia_user'))]"/>
    </record>

    
    <record id="rule_guarderia_user_own" model="ir.rule">
        <field name="name">Guardería: usuario (solo creados por mí)</field>
        <field name="model_id" ref="model_guarderia_servicio"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_guarderia_user'))]"/>
    </record>

    <record id="rule_guarderia_manager_all" model="ir.rule">
        <field name="name">Guardería: responsable (todo)</field>
        <field name="model_id" ref="model_guarderia_servicio"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_guarderia_manager'))]"/>
    </record>
</odoo>
