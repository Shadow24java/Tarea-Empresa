<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record id="view_guarderia_servicio_list" model="ir.ui.view">
        <field name="name">guarderia.servicio.list</field>
        <field name="model">guarderia.servicio</field>
        <field name="arch" type="xml">
            <list string="Servicios de guardería">
                <field name="name"/>
                <field name="monitor_id"/>
                <field name="age_range"/>
                <field name="start"/>
                <field name="stop"/>
                <field name="allday"/>
            </list>
        </field>
    </record>

   
    <record id="view_guarderia_servicio_form" model="ir.ui.view">
        <field name="name">guarderia.servicio.form</field>
        <field name="model">guarderia.servicio</field>
        <field name="arch" type="xml">
            <form string="Servicio de guardería">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="monitor_id" context="{'default_company_id': company_id}"/>
                        <field name="monitor_name" readonly="1"/>
                        <field name="age_range"/>
                    </group>

                    <notebook>
                        <page string="Horario (Evento)">
                            <group>
                                <field name="start"/>
                                <field name="stop"/>
                                <field name="allday"/>
                                <field name="location"/>
                            </group>
                            <group string="Padres / Participantes">
                                <field name="partner_ids" widget="many2many_tags"/>
                            </group>
                        </page>

                        <page string="Descripción">
                            <field name="description" placeholder="Describe el servicio, normas, etc."/>
                        </page>

                        <page string="Datos del monitor (Empleado)">
                            <group>
                                <field name="job_title"/>
                                <field name="work_email"/>
                                <field name="work_phone"/>
                                <field name="department_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="action_guarderia_servicio" model="ir.actions.act_window">
        <field name="name">Guardería</field>
        <field name="res_model">guarderia.servicio</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un servicio de guardería indicando monitor (empleado) y horario (evento).
            </p>
        </field>
    </record>
</odoo>
